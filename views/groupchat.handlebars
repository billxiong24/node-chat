        <script>
            var roomIDs = JSON.parse(decodeURIComponent("{{{parseList}}}"));
        </script>
        <script src="/javascripts/bundle/chat_bundle.js"></script>
        <script type="text/javascript" charset="utf-8">
            $(document).ready(function() {
                
                var height = $(window).height();
                if(height > 700) {
                    $('.chat .chat-history-group').css('height', $(document).height()/2);
                }
                if(height < 690 && height > 300) {
                    $('.chat .chat-history-group').css('height', $(document).height()/2.5);
                }

            });
        </script>

