    <body class="page-body skin-white" data-url="http://neon.dev">
        <div class="chat-visible page-container sidebar-collapsed"><!-- add class "sidebar-collapsed" to close sidebar by default, "chat-visible" to make chat appear always -->
            {{> sidebar}} 

            <div class="main-content">

                {{> header}} 

                <hr />
                    
		<section class="search-results-env" style="margin-top: -40px;">
            
            <ul class="nav nav-tabs right-aligned">
                <!--<li class="tab-title pull-left">
                    <div class="search-string">10 results found for: <strong>&ldquo;this&rdquo;</strong></div>
                </li> -->

                <li class="active">
                    <a href="#pages">
                        Chat
                        <span class="disabled-text"></span>
                    </a>
                </li>
                <li>
                    <a href="#members" id="stats">Stats</a>
                </li>
                <li>
                    <a href="#messages">Messages</a>
                </li>
            </ul>
            <div class="container clearfix search-results-panes" style="background: transparent;">
                <div class="search-results-panes">

                    <div class="search-results-pane active" id="pages">
                        <div class="chat chat-style ">
                            <div class="chat-header clearfix">

                                <div class="chat-about">
                                    <div class="chat-with"></div>
                                    <div class="chat-num-messages"></div>
                                </div>
                                <i class="fa fa-star"></i>
                            </div> <!-- end chat-header -->

                            <div class="chat-history-group">
                                <ul>
                                </ul>

                                <img id="typing" src="/images/typing-indicator2.gif" style="display:none; width: 40px; height: 40px;" alt="" class="pull-right"/>
                            </div> <!-- end chat-history -->

                            <form action="" class="submit-message">
                                <div class="chat-message clearfix">
                                    <textarea name="message-to-send" id="message-to-send" placeholder ="Type your message..." rows="1"></textarea>
                                    <input type="hidden" name="_csrf" value="{{csrfToken}}" />

                                    <div class="file-uploads">
                                        <input id="fileupload" type="file" name="" id="" value="upload" />
                                        <label for="fileupload" id="labelfile"></label>
                                        <i class="fa fa-file-o"></i>
                                        <i class="fa fa-file-image-o"></i>
                                    </div>
                                </div> <!-- end chat-message -->
                            </form>

                        </div>
                    </div>
                    <div class="search-results-pane" id="members">
                    </div> 
                    <div class="search-results-pane" id="messages">
                        <img id="test" src="" alt="" />

                        messagessas	

                    </div>

                </div>

                <!-- end chat -->

            </div>


        </section>

                 <!-- end container -->

                <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.4/jquery.min.js'></script>
                <script src='http://cdnjs.cloudflare.com/ajax/libs/list.js/1.1.1/list.min.js'></script>

                <!--<footer class="main">-->

                <!--&copy; 2015 <strong>Neon</strong> Admin Theme by <a href="http://laborator.co" target="_blank">Laborator</a>-->

                <!--</footer>-->
            </div>


            <div id="chat" class="fixed" data-current-user="{{username}}" data-order-by-status="1" data-max-chat-history="100">

                <div class="chat-inner">
                    <h2 class="chat-header">
                        <a href="#" class="chat-close"><i class="entypo-cancel"></i></a>

                        <i class="entypo-users"></i>
                        Chat
                        <span class="badge badge-success is-hidden">0</span>
                    </h2>


                    <div class="chat-group" id="group-1">
                        <strong>Online  (<span class="online-now"></span>)</strong>
                    </div>
                </div>

                <!-- conversation template -->
                <div class="chat-conversation">

                    <div class="conversation-header">
                        <a href="#" class="conversation-close"><i class="entypo-cancel"></i></a>

                        <span class="user-status"></span>
                        <span class="display-name"></span>
                        <small></small>
                    </div>

                    <ul class="conversation-body">
                    </ul>

                    <div class="chat-textarea">
                        <textarea class="form-control autogrow" placeholder="Type your messsage..."></textarea>
                    </div>
                </div>
            </div>
        </div>

