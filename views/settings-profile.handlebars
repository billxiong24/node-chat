        <form role="form" method="" class="form-horizontal form-groups-bordered validate" action="">
		
			<div class="row">
				<div class="col-md-6">
					
					<div class="panel panel-primary" data-collapsed="0">
					
						<div class="panel-heading">
							<div class="panel-title">
								General Settings
							</div>
							
							<div class="panel-options">
								<a href="#" data-rel="collapse"><i class="entypo-down-open"></i></a>
								<a href="#" data-rel="reload"><i class="entypo-arrows-ccw"></i></a>
							</div>
						</div>
						
						<div class="panel-body">
                            <input name="_csrf" type="hidden" value="{{csrfToken}}">
							<div class="form-group">
								<label for="field-2" class="col-sm-3 control-label">First name</label>
								
								<div class="col-sm-5">
                                    <input name="first" type="text" class="form-control" id="field-2" value="{{first}}">
								</div>
							</div>
			
							<div class="form-group">
								<label for="field-3" class="col-sm-3 control-label">Last name</label>
								
								<div class="col-sm-5">
                                    <input name="last" type="text" class="form-control" name="site-url" id="field-3" data-validate="required,url" value="{{last}}">
								</div>
							</div>
			
							<div class="form-group">
								<label for="field-4" class="col-sm-3 control-label">Email address</label>
								
								<div class="col-sm-5">
                                    <input name="email" type="text" class="form-control" name="email" id="field-4" data-validate="required,email" value="{{email}}">
								</div>
							</div>
				            <button type="submit" class="btn btn-success">Update Settings</button>
						</div>
					
					</div>
				
                </div>
		    </form>
