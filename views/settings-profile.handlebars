								<div class="col-sm-5">
                                    <input name="old_password" type="password" class="form-control" id="field-1">
                                    <input name="_csrf" type="hidden" value="{{csrfToken}}">
								</div>
							</div>
                            <div class="form-group">
								<label for="field-1" class="col-sm-3 control-label">New password</label>
								
								<div class="col-sm-5">
                                    <input name="new_password" type="password" class="form-control" id="field-1">
								</div>
                            </div>
                            <div class="form-group">
								<label for="field-1" class="col-sm-3 control-label">Confirm password</label>
								
								<div class="col-sm-5">
                                    <input name="confirm_password" type="password" class="form-control" id="field-1">
								</div>
							</div>
				            <button type="submit" class="btn btn-success">Update Password</button>
						</div>
					
					</div>
				
				</div>
			</div>
            </form> 
			
			
		
