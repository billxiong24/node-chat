<body class="page-body login-page login-form-fall" data-url="http://neon.dev">


<div class="login-container">
	
	<div class="login-header login-caret">
		
		<div class="login-content">
			
			<a href="/" class="logo">
				<img src="stylesheets/assets/images/logo@2x.png" width="120" alt="" />
			</a>
		</div>
	</div>
	
	<div class="login-progressbar">
		<div></div>
	</div>
	
	<div class="login-form">
		
		<div class="login-content">
            <div class="form-login-error {{visible}}" style="">
                <p>{{signup_error}}</p>
			</div>
			
			<form method="" role="form" id="sendEmail">
				
				<div class="form-register-success"style="display: block;">
					<i class="entypo-check"></i>
					<h3>Sign up complete!</h3>
					<p>We have emailed you the confirmation link for your account.</p>
				</div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success btn-block btn-login">
                        <i class="entypo-right-open-mini"></i>
                        Resend E-mail 
                    </button>
                    <input type="hidden" name="_csrf" id="" value="{{csrfToken}}" />
                </div>
			</form>
			<div class="login-bottom-links">
				
			    <form method="post" action="/logout" role="form" id="form_register">
					<i class="entypo-lock"></i>
                    <button id="loginbutton" type="submit" value="Login">Login with another account</button>
                    <input type="hidden" name="_csrf" id="" value="{{csrfToken}}" />
				<br />
                </form>
				<a href="#">ToS</a>  - <a href="#">Privacy Policy</a>
				
			</div>
			
		</div>
		
	</div>
	
</div>


